@model pokedex.Models.Pokemon

@{
    ViewData["Title"] = "Pokédex";
}

<div class="container-fluid bg-light pokedex-screen">
    <!-- Barra superior -->
    <div class="row bg-danger text-white p-2 align-items-center">
        <div class="col">
            <h5 class="m-0">INFO</h5>
        </div>
    </div>

    <!-- Caixa de pesquisa -->
    <div class="row mt-3">
        <div class="col-12">
            <form asp-controller="Pokedex" asp-action="Search" method="post" class="d-flex">
                <input type="text" name="name" class="form-control me-2" placeholder="Digite o nome ou número do Pokémon" />
                <button type="submit" class="btn btn-danger">Buscar</button>
            </form>
        </div>
    </div>

    @if(ViewBag.Error != null)
    {
        <div class="row mt-3">
            <div class="col">
                <div class="alert alert-danger">@ViewBag.Error</div>
            </div>
        </div>
    }

    @if(Model != null)
    {
        <!-- Conteúdo principal -->
        <div class="row mt-4">
            <!-- Imagem Pokémon -->
            <div class="col-4">
                <div class="card shadow pokedex-card">
                    <div class="card-body text-center">
                        <img src="@Model.Sprite" alt="@Model.Name" class="img-fluid">
                    </div>
                </div>
            </div>

            <!-- Nome e Tipo -->
            <div class="col-8">
                <div class="card shadow mb-3 pokedex-card">
                    <div class="card-body">
                        <h4 class="m-0 text-capitalize">@Model.Name [#@Model.Id]</h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="card shadow pokedex-card">
                            <div class="card-body">
                                @foreach(var type in Model.Types)
                                {
                                    <span class="badge bg-primary text-capitalize me-1">@type</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card shadow pokedex-card">
                            <div class="card-body">
                                <p class="m-0"><b>HT:</b> @Model.Height m</p>
                                <p class="m-0"><b>WT:</b> @Model.Weight kg</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
